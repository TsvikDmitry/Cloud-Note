            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:text="Функция создания блокнота" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button2"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
